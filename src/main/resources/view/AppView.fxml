<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="controller.AppController" fx:id="borderPane">

    <!--    Board-->
    <!--        <center>-->
    <!--            <BoardView fx:id="boardView"/>-->
    <!--        </center>-->

    <!--    TODO Controls (and menu in the future)-->
    <right>
        <!--    TODO Move it to separate fxml-->
        <VBox fx:id="rightSide" alignment="TOP_CENTER" prefHeight="750.0" prefWidth="200.0"
              BorderPane.alignment="CENTER">
            <Label text="Sterowanie:">
                <VBox.margin>
                    <Insets top="10.0" bottom="10.0"/>
                </VBox.margin>
            </Label>

            <VBox fx:id="movementButtons" maxHeight="-Infinity" prefHeight="40.0" prefWidth="200.0"
                  BorderPane.alignment="CENTER">
                <HBox maxHeight="-Infinity" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="0.0" left="15.0" right="15.0" top="0.0"/>
                    </VBox.margin>
                    <Button fx:id="7" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="NW">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="8" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="N">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="9" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="NE">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>

                <HBox maxHeight="-Infinity" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="0.0" left="15.0" right="15.0" top="0.0"/>
                    </VBox.margin>
                    <Button fx:id="4" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="W">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="10" mnemonicParsing="false" prefWidth="50" text="" disable="true">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="6" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="E">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>

                <HBox maxHeight="-Infinity" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0"/>
                    </VBox.margin>
                    <Button fx:id="1" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="SW">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="2" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="S">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="3" mnemonicParsing="false" onAction="#onDirectionPress" prefWidth="50" text="SE">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </VBox>

            <Label fx:id="instructionsText" textAlignment="CENTER" wrapText="true"
                   text="Instrukcja: &#10;&#10; Poruszaj się doktorem za pomocą przycisków - postaraj się doprowadzić do kolizji wszystkich daleków.">
                <VBox.margin>
                    <Insets top="40.0" right="3" left="3"/>
                </VBox.margin>
            </Label>

        </VBox>
    </right>
</BorderPane>